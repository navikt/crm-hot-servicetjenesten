<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>HOT Redirect Flow</masterLabel>
    <description>Redirect to recordPage by recordId</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" label="RecordId to redirect" type="String" role="inputOnly" />
            <property name="openAsSubtab" label="As Subtab" type="Boolean" role="inputOnly" default="false" />
            <property name="closeCurrentTab" label="Close current Tab" type="Boolean" role="inputOnly" default="false" description="Not relevant if As Subtab is set to 'true'."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>