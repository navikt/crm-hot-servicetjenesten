<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Refresh Page (Flow Action)</masterLabel>
    <description>Refreshes the current page or console tab when used in a Flow.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="includeAllSubtabs" type="Boolean" label="Include All Subtabs"
                default="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>